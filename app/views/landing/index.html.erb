<div class="container">
  <%= image_tag "pics/sig2.png", class: "signature top", alt: "Artist Signature" %>
  <div class="paintings">
    <% @paintings.each do |painting| %>
      <div class="painting">
        <p class="title"><%= painting.title %></p>
        <%= image_tag "pics/#{painting.image.split('/').last}", class: "painting-image", alt: painting.title %>
      </div>
    <% end %>
  </div>
  <div class="contact">
    <div class="contact-header">
      <h4 class="price">All Prints $30</h4>
      <div class="instagram-link">
        <h4>Interested? Reach out on Instagram!</h4>
        <a href="https://www.instagram.com/andrewpatrickwatson/" target="_blank">
          <img src="https://upload.wikimedia.org/wikipedia/commons/a/a5/Instagram_icon.png" 
              alt="Instagram" 
              class="instagram-logo">
        </a>
      </div>
    </div>
    <%= image_tag "pics/sig1.png", class: "signature bottom", alt: "Decorative Signature" %>
  </div>
</div>